<UserControl x:Class="MultiCommentViewer.Views.Twitch.RawMessagePostPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiCommentViewer.Views.Twitch"
             mc:Ignorable="d" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="50" Width="485"
             >
    <Grid>
        <Button Content="test" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding PostCommand}"  Width="80" Height="50" Margin="5" />
        <TextBox x:Name="textBox" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,95,5" TextWrapping="Wrap" Text="{Binding Input}" />
    </Grid>
</UserControl>
