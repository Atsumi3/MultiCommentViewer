<UserControl x:Class="NicoSitePlugin.Old.NicoOptionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NicoSitePlugin"
             xmlns:test="clr-namespace:NicoSitePlugin.Old"
             d:DataContext="{d:DesignInstance test:NicoSiteOptionsViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Height="360" Width="405">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="169,30,0,0" TextWrapping="Wrap" Text="{Binding OfficialRoomsRetrieveCount}" VerticalAlignment="Top" Width="51"/>
        <CheckBox IsChecked="{Binding CanUploadPlayerStatus}" Content="コメントサーバの情報をコメビュ作者のサーバにアップロードする（配信者のみ）" HorizontalAlignment="Left" Margin="17,95,0,0" VerticalAlignment="Top"/>
        <Label Content="公式放送で取得する部屋数" HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.192"/>

    </Grid>
</UserControl>
