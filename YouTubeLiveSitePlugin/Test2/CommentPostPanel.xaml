<UserControl x:Class="YouTubeLiveSitePlugin.Test2.CommentPostPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YouTubeLiveSitePlugin.Test2"
             d:DataContext="{d:DesignInstance local:CommentPostPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Height="80" Width="330">
    <Grid Margin="0" Background="Orange">
        <TextBox HorizontalAlignment="Stretch" Height="23" Margin="0,27,90,0" TextWrapping="NoWrap" Text="{Binding Comment}" VerticalAlignment="Top" />
        <Button Content="投稿" Command="{Binding PostCommentCommand}" HorizontalAlignment="Right" Margin="0,27,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
